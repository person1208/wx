.sx {
  height: 60px;
  border-bottom: 1px solid rgb(231, 231, 231);
  width: 100%;
}

.sx .row {
  height: 30px;
}

.topnav {
  height: 30px;
  padding-left: 20px;
  width: 600px;
}

.topnav .topvan-item {
  float: left;
  height:30px;
  line-height: 27px;
  background: rgb(231, 231, 231) url(data:image/png;base64,);
  background-size: 10px 10px;
  background-repeat: no-repeat;
  background-position: 93% center;
  padding:0 20px 0 10px;
  margin-right: 10px;
  font-size: 12px;       
  position: relative; 
}
.topnav .topvan-item.cur{
  background-color: #fff;
  border:1px solid #ccc;
}
.topnav .topvan-item.cur::before{
  content:'';
  width:100%;
  height:10px;
  background-color: #fff;
  position: absolute;
  bottom:-10px;
  left:0;
}
.menu{
  position: fixed;
  left:0;
  top:61px;
  width: 100%;
  height:100%;
  
  z-index:9999;
}
.menu .mask{
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.8);
}
.menu .menu_inner{
  width: 100%;
  min-height:400px;
  background-color: #fff;
  position: absolute;
  top:0;
  left:0;
}
.sx .btn {
  float: right;
  border: 1px solid #ccc;
  font-size: 14px;
  padding: 2px 4px;
  margin: 4px;
}

.btn button {
  margin: 5px;
}

.box {
  display: flex;
  margin-bottom: 10px;
}

.box .pic {
  width: 160px;
  height: 130px;
}

.box .pic image {
  width: 160px;
  height: 130px;
}

.box .word {
  flex: 1;
  padding-left: 10px;
  font-size: 14px;
}

.container {
  width: 290px;
  background-color: #fff;
}