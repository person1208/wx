/* components/drawer/drawer.wxss */
.bottom_btn{
    width: 100%;
    height: 50px;
    border-top: 1px solid #ccc;
    display: flex;
    line-height: 50px;
}
.bottom_btn .btn0{
    flex:1;
    border-right:1px solid #ccc;
    text-align: center;
}
.bottom_btn .btn1{
    flex:3;
    height: 50px;
    text-align: center;
    line-height: 50px;
}
.bottom_btn .btn2{
    flex:3;
    height: 50px;
    text-align: center;
    line-height: 50px;
    background: orange;
    color:#fff;
}
.sx_grid{
    padding: 10px;
}
.sx_grid .title{
    font-size: 18px;
    line-height: 26px;
    border-bottom: 1px solid #ccc;
    overflow: hidden;
}
.sx_grid .content {
    padding-top: 10px;
    overflow: hidden;
}
.sx_grid .content .btn{
    float:left;
    box-sizing: border-box;
    width: 33.33%;
    height: 33px;
    background: #eee;
    border-right: 6px solid white;
    margin-bottom: 10px;
    text-align: center;
    line-height: 33px;
    border-radius: 4px;
    font-size: 14px;
}
.sx_grid .content .btn:nth-child(3n){
    border-right: none;
}
.sx_grid .content .btn.all{
    border: 1px solid #eee;
    background: white;
} 
.sx_grid .content .btn.cur{
    background: yellow;
}